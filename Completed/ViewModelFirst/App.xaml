<Application x:Class="ViewModelFirst.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:ViewModelFirst.ViewModels"
             xmlns:views="clr-namespace:ViewModelFirst.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:MainMenuViewModel}">
            <views:MainMenuView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:PlayersViewModel}">
            <views:PlayersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:TeamsViewModel}">
            <views:TeamsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:GamesViewModel}">
            <views:GamesView/>
        </DataTemplate>
    </Application.Resources>
</Application>
