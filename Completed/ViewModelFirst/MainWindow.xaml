<Window x:Class="ViewModelFirst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded"
        Title="View Model First" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Back" Command="{Binding Back}" Width="75" Margin="4" />
            <TextBlock Text="{Binding Title}" Margin="4" FontSize="14"/>
        </StackPanel>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Contents}" Grid.RowSpan="2" />
    </Grid>
</Window>
